{
  "name": "app_configs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migration:generate": "node -e \"const args = process.argv.slice(1); const name = args.pop(); if (!name) { console.error('‚ùå Missing migration name'); process.exit(1); } const { execSync } = require('child_process'); execSync(`npx ts-node --esm ./node_modules/typeorm/cli.js migration:generate -d src/db/data-source.ts src/migrations/${name}`, { stdio: 'inherit' });\"",
    "migration:run": "npx ts-node --esm ./node_modules/typeorm/cli.js migration:run -d src/db/data-source.ts",
    "migration:revert": "npx ts-node --esm ./node_modules/typeorm/cli.js migration:revert -d src/db/data-source.ts",
    "dotenv:pull": "npx dotenv-vault@latest pull",
    "dotenv:push": "npx dotenv-vault@latest push",
    "token:new": "node -e \"const len=parseInt(process.argv[1]||32); console.log(require('crypto').randomBytes(len).toString('hex'))\"",
    "prepare": "husky install",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "prepush": "npm run lint && npm run typecheck && npm test",
    "cli": "npx ts-node src/cli/index.ts",
    "app": "npm run cli --"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "dotenv-vault": "^1.27.0",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
